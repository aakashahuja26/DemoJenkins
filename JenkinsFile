pipeline{
    agent any
    stages{
        stage('Clone'){
            steps{
               sh git clone https://github.com/aakashahuja26/SampleJavaApp.git
            }
        }
        stage('Test'){
                steps{
                    echo 'mvn clean'
                }
        }
        stage('Build'){
            steps{
                echo  'mvn install'
            }
        }
        stage('Deploy'){ 
            steps{
                echo  'Deploy to container'
            }
        }
    }
}