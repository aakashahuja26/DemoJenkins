pipeline{
    agent any
    tools {
        maven 'Maven' 
    }
    stages{
        stage('Clone'){
            steps{
               sh "git clone https://github.com/aakashahuja26/SampleJavaApp.git"
               sh "mvn -version"
            }
        }
        stage('Test'){
                steps{
                    sh 'mvn clean'
                }
        }
        stage('Build'){
            steps{
                sh  'mvn install'
            }
        }
        stage('Deploy'){ 
            steps{
                echo  'Deploy to container'
            }
        }
    }
}